    "@fastify/sensible": "^5.1.1",
    "fastify-cli": "^5.5.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "ts-node": "^10.9.1",
    "concurrently": "^7.5.0",
    "fastify-tsconfig": "^1.0.1",
    "typescript": "^4.8.4"
  }
